<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KidsApp.Forms.Home_Researcher.EditSession"
             xmlns:combobox="clr-namespace:Syncfusion.XForms.ComboBox;assembly=Syncfusion.SfComboBox.XForms"
             Title="Edit Session">
    <ContentPage.Content>
        <StackLayout>
            <Label Margin="0,5,0,0" Text="Change or remove the already existing session according to user feedback"></Label>
            <Label Margin="0,10,0,0" HorizontalTextAlignment="Start" Text="Please select a Session that you would like to edit"/>
            <combobox:SfComboBox Margin="20, 10, 20, 20" x:Name="selectSession"/>
            <Button Text="Edit Session" TextColor="White" BackgroundColor="Accent" Margin="5,0,5,10" x:Name="EditSessionBtn" Clicked="EditSessionBtn_Clicked"></Button>
            <Button Text="Delete Session" TextColor="white" BackgroundColor="Accent" x:Name="DeleteSession" Clicked="DeleteSession_Clicked" Margin="5,0,5,0" ></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>