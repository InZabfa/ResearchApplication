<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KidsApp.Forms.Home_Researcher.CreateSession"
             xmlns:combobox="clr-namespace:Syncfusion.XForms.ComboBox;assembly=Syncfusion.SfComboBox.XForms"
             Title="Create Session">
    <ContentPage.Content>
        <StackLayout Margin="10">
            <ScrollView>
                <StackLayout>
                    <Label Text="When selecting levels ensure they are selected in the order that you wish them to appear"></Label>

                    <Label Text="Please give this session a unique name. This will be then used to add it to the Experiment"></Label>
                    <Entry x:Name="sessionNametxt" Margin="5,0,5,0"></Entry>

                    <Label Margin="10,10,10,0" Text="Select levels for this session"></Label>
                    <combobox:SfComboBox Margin="20, 10, 20, 20" x:Name="comboBoxLevel"/>
                </StackLayout>

            </ScrollView>

            <Button x:Name="SaveSession" Margin="10,10,10,10" Text="Save" Clicked="SaveSession_Clicked" BackgroundColor="Accent" TextColor="White"></Button>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>